{% extends 'layout.twig' %}
{% block title %}
	<title>OSS Blog || Ajout d'un article</title>
{% endblock %}

{% block menu %}
    {% include 'menu.twig' %}
{% endblock %}

{% block body %}
	
	<p>Ajoutez votre article :</p>

	{% if erreur != "" %}
		<p>Erreur : {{erreur}}</p>
	{% endif %}

	<form id="formAjoutArticle" action="" method="post" enctype="multipart/form-data">
		<input type="text" name="titreArticle" placeholder="Titre de l'article"><br>
		<textarea name="contenuArticle" placeholder="Entrez votre article" rows="10" cols="100"></textarea><br>
		<input type="text" name="tagArticle" placeholder="Tags associés à vos articles"><br>
		<input type="hidden" name="MAX_FILE_SIZE" value="10000000">
		<input type="file" name="lienPhoto" placeholder="Lien de votre photo"><br>
		<input type="submit">
	</form>

{% endblock %}