{% extends 'layout.twig' %}

{% block title %}
	<title>OSS Blog || Modifier article {{ article.getIdArticle() }}</title>
{% endblock %}

{% block menu %}
    {% include 'menuAdmin.twig' %}
{% endblock %}

{% block body %}

{#{% include 'menu.twig' %}#}
<h1>Modification du contenu de l'article</h1>

<h2>{{ article.getTitre() }}</h2>

<form action="" method="post">

<textarea name="contenuArticle" rows="10" cols="50">
 {{ article.getContenuArticle() }}
</textarea>

<ul>
	{% for commentaire in commentaires %}  
	<li>{{ commentaire.getContenuCommentaire() }}  <a href="{{app.request.basepath}}/modererCommentaire/{{commentaire.getIdCommentaire()}}">Moderer</a>  <a href="{{app.request.basepath}}/removeCommentaire/{{commentaire.getIdCommentaire()}}">Supprimer</a> 
		
	</li>

	{% endfor %}
	
</ul> 

<input type="submit" value="Valider" />

</form>



{% endblock %}