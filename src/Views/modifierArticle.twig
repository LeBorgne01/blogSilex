{% extends 'layout.twig' %}

{% block title %}
<title>OSS Blog || Modifier article {{ article.getIdArticle() }}</title>
{% endblock %}

{% block menu %}
{% include 'menuAdmin.twig' %}
{% endblock %}

{% block body %}

<h1>Modification du contenu de l'article</h1>

<h2>{{ article.getTitre() }}</h2>

<form action="" method="post">

	<textarea name="contenuArticle" rows="10" cols="50">{{ article.getContenuArticle() }}
	</textarea>

	<br>

	<input type="submit" value="Valider" />

	<ul>
		{% for commentaire in commentaires %}  <br>
		<li class="commentaireModerer">{{ commentaire.getContenuCommentaire() }}  
			<a href="{{app.request.basepath}}/modererCommentaire/{{commentaire.getIdCommentaire()}}0">Moderer</a>
			<a href="{{app.request.basepath}}/modererCommentaire/{{commentaire.getIdCommentaire()}}1">Commentaire inutil</a>
			<a href="{{app.request.basepath}}/modererCommentaire/{{commentaire.getIdCommentaire()}}2">Commentaire injurieux et/ou discriminatoire </a> 
			<a href="{{app.request.basepath}}/removeCommentaire/{{commentaire.getIdCommentaire()}}">Supprimer</a>
			<p>-------------------------------------------------------</p>
		</li>

		{% endfor %}

	</ul> 



</form>



{% endblock %}